{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/chat",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/ui/$1"
    }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.12"
    }
  },
  "installCommand": "cd ui && npm install && cd .. && pip install -r requirements.txt"
}
